FROM node:18-slim
RUN apt-get update && \
  apt-get install -y --no-install-recommends \
  build-essential \
  python3 \
  texlive-latex-base \
  texlive-fonts-recommended \
  texlive-fonts-extra \
  texlive-latex-extra && \
  apt-get clean && \
  rm -rf /var/lib/apt/lists/*
WORKDIR /app

